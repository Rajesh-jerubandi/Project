pipeline {
    agent any

    tools {
        maven "m1"
    }
    

    stages {
        stage ('checkout') {
            steps {
               checkout changelog: false, scm: scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'git', url: 'https://github.com/Rajesh-jerubandi/Project']])
        }
        }
        stage('Build') {
            steps {
                
                sh 'mvn clean install'
            }

            post {
                success {
                    archiveArtifacts '**/**/*.jar'
                }
            }
        }
        stage("sonarqube build"){
            steps{
                withSonarQubeEnv('sonarqube') {
                    sh "mvn clean package sonar:sonar"
                }
            }
        }
         stage("jfrog upload"){
            steps{
                rtUpload(
                    serverId: 'rajeshjfrog',
                    spec: '''{
                        "files": [
                            {
                                "pattern": "**/**/*.*ar",
                                "target": "project/"
                            }
                        ]
                    }'''
                )
            }
        }

         stage('dockerbuild'){
            steps{
                dir("backend"){
                    sh 'docker build -t rajeshj19/backend:latest .'
                }
                dir("frontend"){
                    sh 'docker build -t rajeshj19/frontend:latest .'
                }
            }
        }
         stage('docker push'){
             steps{
                 withCredentials([usernamePassword(credentialsId: 'docker', passwordVariable: 'pwd', usernameVariable: 'user')]) {
                    sh 'docker login -u rajeshj19 -p Rajesh@1991'
                    sh 'docker push rajeshj19/backend:latest'
                    sh 'docker push rajeshj19/frontend:latest'
                }
            }
        }

    }
}
